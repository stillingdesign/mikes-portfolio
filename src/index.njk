<!-- Headline -->
<section class="gridContainer homeHeadline">
  <div class="grid">

    <h1>
      Mike Stilling <span class="hideTablet">is a designer that</span> builds <span class="serif">digital brands</span> with nice<span class="hideMobile">, talented</span> people.
    </h1>

  </div>
</section>

<!-- Hero Image -->
<section class="gridContainer homeHeroImage">
  <div class="grid">

    <div class="imgOuter">

      <div class="imgLabel mono allCaps">
        <p>Trendy Stuff</p>
        <p>3D Exploration</p>
        <p>2021 Mike Stilling</p>
      </div>

      <div class="imgInner">
        <img src="./assets/img/hero-placeholder.jpg" alt="placeholder">
      </div>

    </div>

  </div>
</section>

<!-- Intro -->
<section class="gridContainer homeIntro">
  <div class="grid">

    <h2>
      He turns strategy into reality with design, code, and <span class="serif italic">collaboration</span>.
    </h2>

    <div class="gridFill"></div>
    
    <p>
      Mike bridges the gap between marketing and product teams by understanding the goals of each and how they work together. He designs elements, components, and systems that scale.
    </p>

  </div>
</section>

<!-- Case Studies Title -->
<section class="gridContainer homeCaseStudiesTitle">
  <div class="grid">

    <p class="allCaps lineOne">Case</p>
    <p class="allCaps serif lineTwo">Studies</p>

  </div>
</section>

<!-- Case Studies -->
<section class="gridContainer homeCaseStudies" id="homeCaseStudies">
  <div class="grid homeCaseStudiesContainer" id="homeCaseStudiesContainer">

    {% for page in projectPages.slice(0, 3) %}
    <div class="homeCaseStudy">
      <a href="/projects/{{ page.slug | url }}">

        <div class="imgOuter">
          <div class="imgInner">
            <img src="{{ page.heroImage.url }}" alt="{{ page.heroImage.altText }}"/>
          </div>
        </div>

        <div class="labelOuter">
          <div class="labelInner">
            <h3>{{page.postTitle}}</h3>
          </div>
        </div>

      </a>
    </div>
    {% endfor %}

  </div>
</section>